{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "typeRoots": ["./node_modules/@types"],
        "moduleResolution": "node",
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "modules/*": [
                "./src/modules"
            ],
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*",
    ]
}
